<article>
    <button class="btn-back">
        <a href="/dashboard"> &larr; Back to Dashboard</a>
    </button>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input class="form-input" type="text" name="post-title" value="{{post.title}}" />
            <span>({{format_url post.post_url}})</span>
        </div>
        <div>
            by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comment.length}} {{format_plural "comment" post.comments.length}} </a>
        </div>
        <button type="submit" class="btn">Save Post</button>
        <button type="button" class="delete-post-btn btn-back">Delete Post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea class="form-input" name="comment-body"></textarea>
    </div>

    <div>
        <button class="btn" type="submit">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
